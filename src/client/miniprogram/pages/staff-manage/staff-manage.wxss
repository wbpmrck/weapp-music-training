@import '../../res/style/common.wxss';

.page {
    text-align: center;
    font-size: 30rpx;
    
}

.page .staff-list{
    position: relative;
    width: 100%;
    height:100%;

    overflow-y: scroll;
}

.page .staff-item{
    width: 100%;

}

.btn.create-staff {
    position: fixed;
    bottom: 40rpx;
    left: 50rpx;
    width: 650rpx;
    color: #fff;
    background-color: #1fb922;
}


/* 菜单项 */
.list-btn-group{
    display: flex;
    flex-direction: row;
    height: 100%;
    color:#fff;
    font-size:36rpx;
}
.list-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    width: 50%;
    height: 100%;
    text-align: center;
    vertical-align: middle;
}
#choose {
    background-color: #19be6b;
}
#cancel {
    background-color: #f90;
}