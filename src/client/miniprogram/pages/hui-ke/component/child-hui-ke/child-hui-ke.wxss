@import '../../../../res/style/common.wxss';


.page {
    display: flex;

    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
}
 .page .title {
    display: inline-block;

    margin-top: 200rpx;

 }

 .record {

    margin-top: 100rpx;
     width: 128rpx;
     height: 128rpx;

     animation-name: keyframes-record;
     animation-duration: 3s;
     animation-delay: 0s;
     animation-iteration-count: infinite;
 }

 @keyframes keyframes-record{

    0%{
        transform: scale(1) rotate(10deg);
     }
     7%{
         transform: scale(.86) rotate(17deg);
     }
     14%{
         transform: scale(1.2) rotate(-10deg);
     }
     21%{
         transform: scale(.87) rotate(20deg);
     }
     28%{
         transform: scale(1.19) rotate(-14deg);
     }
     100%{
        transform: scale(1) rotate(0deg);
     }
 }